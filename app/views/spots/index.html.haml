- @spots.each do |spot|
  .booyah-box.col-xs-10.col-xs-offset-1
    %h3= link_to spot.name, spot_path(spot)
    %i= spot.address
    %br/
    %br/
    %p= spot.description
    %br/
    - if spot.user.present?
      %small= spot.user.first_name
    - if spot.comments.present?
      .col-xs-12
      %blockquote
        - if spot.comments.first.humanized_rating.present?
          %b= spot.comments.first.humanized_rating
          \-
        = spot.comments.first.message
        %small= spot.comments.first.user.first_name
